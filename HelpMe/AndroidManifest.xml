<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.helpme"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
  	
  	<uses-permission android:name="android.permission.INTERNET"/>
  	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.helpme.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.helpme.DisplayLookActivity"
            android:label="@string/title_activity_display_look" >
            android:parentActivityName="com.example.helpme.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.helpme.MainActivity" />
        </activity>
        <activity
            android:name="com.example.helpme.DisplayPostActivity"
            android:label="@string/title_activity_display_post"
            android:parentActivityName="com.example.helpme.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.helpme.MainActivity" />
        </activity>
        <activity
            android:name="com.example.helpme.DisplaySelectQuestion"
            android:label="@string/title_activity_display_select_question"
            android:parentActivityName="com.example.helpme.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.helpme.MainActivity" />
        </activity>
        <activity
            android:name="com.example.helpme.DisplayAnswerActivity"
            android:label="@string/title_activity_display_answer"
            android:parentActivityName="com.example.helpme.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.helpme.MainActivity" />
        </activity>
    </application>

</manifest>
